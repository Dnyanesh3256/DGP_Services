<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1.7"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/c2_50"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="20dp"
                    android:layout_margin="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1.5"
                        android:background="@drawable/cv_shape">

                        <TextView
                            android:id="@+id/memberName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dnyaneshwar Tupe"
                            android:textColor="@color/textColor"
                            android:layout_margin="10dp"
                            android:layout_weight="0.5"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppinssemibold"/>

                        <TextView
                            android:id="@+id/memberPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Departmental Lecturer"
                            android:textColor="@color/textColor"
                            android:layout_weight="0.5"
                            android:layout_margin="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppinsmedium" />

                        <TextView
                            android:id="@+id/memberEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="dbtupe3256@gmail.com"
                            android:textColor="@color/textColor"
                            android:layout_weight="0.5"
                            android:layout_margin="10dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/akaya" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/memberImage"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.3"
                android:src="@drawable/avatar_profile_male"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>