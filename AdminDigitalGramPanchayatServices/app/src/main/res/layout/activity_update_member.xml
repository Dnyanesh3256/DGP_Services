<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".faculty.UpdateMemberActivity">
  
  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:id="@+id/updateMemberImage"
      android:layout_gravity="center"
      android:src="@drawable/avatar_profile_male"
      android:layout_marginTop="36dp"/>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:id="@+id/updateMemberName"
        android:fontFamily="@font/akaya"/>
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/updateMemberEmail"
        android:fontFamily="@font/akaya"/>
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Post"
        android:inputType="text"
        android:id="@+id/updateMemberPost"
        android:fontFamily="@font/akaya"/>
  </com.google.android.material.textfield.TextInputLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="24dp"
      android:weightSum="2">

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Update"
        android:textAllCaps="true"
        android:id="@+id/updateMemberBtn"
        android:textStyle="bold"
        android:backgroundTint="@color/c2_700"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/akaya"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Delete"
        android:layout_marginLeft="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:backgroundTint="@color/c2_700"
        android:id="@+id/deleteMemberBtn"
        android:fontFamily="@font/akaya"/>

  </LinearLayout>

</LinearLayout>