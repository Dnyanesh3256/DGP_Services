<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cv_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/memberName"
                    android:text="Dnyaneshwar Tupe"
                    android:textColor="@color/textColor"
                    android:textSize="16dp"
                    android:fontFamily="@font/akaya"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/memberPost"
                    android:text="Principle"
                    android:textColor="@color/textColor"
                    android:textSize="18dp"
                    android:fontFamily="@font/akaya"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/memberEmail"
                    android:text="dbtupe3256@gmail.com"
                    android:textColor="@color/textColor"
                    android:textSize="12dp"
                    android:fontFamily="@font/akaya"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/memberUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Info"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/c2_700"
                    android:layout_marginVertical="4dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:fontFamily="@font/akaya"/>

            </LinearLayout>
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/memberImage"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:src="@drawable/avatar_profile_male"
                android:layout_weight="0.5"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>